rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Canvas collection - allow authenticated users to read and write
    match /canvas/{canvasId} {
      // Allow authenticated users to read any canvas
      allow read: if request.auth != null;
      
      // Allow authenticated users to create canvases
      allow create: if request.auth != null 
                   && request.resource.data.keys().hasAll(['canvasId', 'shapes', 'lastUpdated'])
                   && request.resource.data.canvasId is string
                   && request.resource.data.shapes is list
                   && request.resource.data.lastUpdated is timestamp;
      
      // Allow authenticated users to update canvases
      // Validate that shapes array contains valid shape objects
      allow update: if request.auth != null
                   && request.resource.data.keys().hasAll(['canvasId', 'shapes', 'lastUpdated'])
                   && request.resource.data.canvasId == resource.data.canvasId;
      
      // Allow authenticated users to delete canvases
      allow delete: if request.auth != null;
    }
    
    // Projects collection - TEMPORARY: allow all authenticated users
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
      
      match /members/{userId} {
        allow read, write: if request.auth != null;
      }
      
      match /canvases/{canvasId} {
        allow read, write: if request.auth != null;
        
        match /shapes/{shapeId} {
          allow read, write: if request.auth != null;
        }
      }
      
      match /invitations/{invitationId} {
        allow read, write: if request.auth != null;
      }
      
      match /activities/{activityId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // User projects collection
    match /userProjects/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Global invitations collection
    match /invitations/{invitationId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
